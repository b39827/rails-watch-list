<div class="container">
<h1>List: <%= @list.name%></h1>

<h3>New Bookmark</h3>

<%= simple_form_for [@list, @bookmark] do |f| %>
  <%= f.input :movie_id, collection: Movie.all, label: 'Select Movie' %>
  <%= f.input :comment, label: 'Comment' %>

  <%= f.button :submit, class: "new-button" %>
<% end %>
<br>
<h3>Bookmarks</h3>
<ul>
<% @bookmarks.each do |bookmark| %>
<li><%= bookmark.comment %>
  <%= link_to "Delete", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
</li>
<% end %>
</ul>
<br>


<%= link_to 'Go Back to Lists', lists_path %>
</div>
